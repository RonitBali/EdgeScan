rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if path belongs to user
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Uploads folder - per user isolation
    match /uploads/{userId}/{type}/{filename} {
      // Allow read if authenticated and accessing own files
      allow read: if isOwner(userId);
      
      // Allow write (create/update) if authenticated and writing to own folder
      allow write: if isOwner(userId) && 
                      (type == 'original' || type == 'processed') &&
                      request.resource.size < 10 * 1024 * 1024 && // Max 10MB
                      request.resource.contentType.matches('image/.*|application/pdf');
      
      // Optionally allow delete
      // allow delete: if isOwner(userId);
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
